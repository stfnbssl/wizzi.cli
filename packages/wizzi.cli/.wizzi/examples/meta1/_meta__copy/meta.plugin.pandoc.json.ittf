    [ Schemas
        {
            name "pandoc"
            plugin_type "syntax_structure"
            hasWizzifier false
            { wizzifier
            [ includes
            [ transformers
            [ artifacts
                {
                    name "document"
                    outmime "json"
                    isDefault true
                    contentType "application/json"
            [ fileExtensions
                $*
                "docx"
                "html"
                "md"
                "pdf"
                "pptx"
                *$