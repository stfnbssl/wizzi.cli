$group
    #
        # Retrieve the folder templates of a meta production by its name
    async-function getFolderTemplates
        param metaProductionName
        param packiFiles
        +
        set packiFiles = packiFiles || {}
        return
            _ folderFsToPackiFiles
                _ path.join
                    @ __dirname
                    @ 'ittf'
                    @ 'folderTemplates'
                    @ metaProductionName
                @ packiFiles